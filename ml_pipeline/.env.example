# ML Pipeline - Feature Engineering → Training → Inference
# Copy to .env and set as needed.

# ERP API (for feature_engineering fetch and inference --source api)
ERP_API_BASE_URL=http://localhost:8000
ERP_API_TOKEN=
ML_EXPORT_BATCH_SIZE=10000

# Paths (relative to ml_pipeline/ or cwd)
DATA_DIR=data
FEATURES_DIR=features
MODEL_DIR=model
OUTPUT_DIR=output

# Training
N_COMPONENTS=8
N_CLUSTERS=5
ANOMALY_QUANTILE=0.95
RANDOM_STATE=42

# Optional cap for dev
# MAX_ROWS=5000
